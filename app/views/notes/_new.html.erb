<div id='upload-form'>




  <ul class="collapsible" data-collapsible="accordion">
    <li>
      <div class="collapsible-header"><i class="material-icons">note_add</i>Upload an Image</div>
        <div class="collapsible-body camera-container">
        <%= form_tag({action: :create}, multipart: true) do %>
        <%= text_field_tag 'title' %>
        <%= file_field_tag 'picture' %>
        <%= submit_tag %>
        <% end %>
      </div>
    </li>
    <li>

      <div class="collapsible-header camera-caller"><i class="material-icons">camera</i>Take a Picture</div>

      <div class="collapsible-body" >Take a Picture of your document
      <%= render partial: 'camera' %>
      </div>
    </li>
    <li>
      <div class="collapsible-header"><i class="material-icons">whatshot</i>Third</div>
      <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
    </li>
  </ul>




</div>