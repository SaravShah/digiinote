<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
  <br>
<% end %>

<%= form_for @note do |f| %>
	<%= f.text_area :text %>
	<ul class="collapsible" data-collapsible="accordion">
	    <li>
	      <div class="collapsible-header"><i class="material-icons">place</i>Second</div>
	      <div class="collapsible-body camera-container">
	      	<%= f.file_field :picture %>
			<%= f.submit %>
	      </div>
	    </li>
	    <li>
	      <div class="collapsible-header edit-camera-caller"><i class="material-icons">whatshot</i>take a picture</div>

	      <div class="collapsible-body" >take a picture of your document
	      <%= render partial: 'camera' %>
	      </div>
	    </li>
	    <li>
	      <div class="collapsible-header"><i class="material-icons">whatshot</i>Third</div>
	      <div class="collapsible-body"><p>Lorem ipsum dolor sit amet.</p></div>
	    </li>
  	</ul>

		
	
<% end %>

<div id='camera-container'></div>

<%= link_to 'Take a Picture', getcamera_path, remote: true, id: "summon-camera" %>
<%= link_to 'Send to Google Docs', oauth2_path %>
